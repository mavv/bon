{
    "name": "bon",
    "version": "1.0.0",
    "description": "building blocks",
    "main": "src/index.js",
    "repository": "https://github.com/mavv/bon.git",
    "author": "Lucian <sickmav@gmail.com>",
    "license": "MIT",
    "scripts": {
        "lint": "./node_modules/.bin/estlint src",
        "prettier": "./node_modules/.bin/prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
        "format": "npm run prettier -- --write",
        "validate": "npm run lint && npm run prettier ~ --list-different",
        "clean": "rm -rf ./dist",
        "build:dev": "npx webpack --mode=development",
        "start": "npm run build:dev; webpack-dashboard -- webpack-dev-server --hot --mode development"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint"
            ],
            "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
                "prettier --write",
                "git add"
            ]
        }
    },
    "husky": {
        "hooks": {
            "precommit": "lint-staged && npm run validate",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "@babel/preset-env": "^7.2.0",
        "@babel/preset-react": "^7.0.0",
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.3.1",
        "babel-loader": "^8.0.4",
        "css-loader": "^2.0.0",
        "eslint": "^5.10.0",
        "eslint-config-prettier": "^3.3.0",
        "fullcalendar-scheduler": "^1.9.4",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "husky": "^1.2.0",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3",
        "react-hot-loader": "^4.3.12",
        "style-loader": "^0.23.1",
        "webpack": "^4.27.1",
        "webpack-cli": "^3.1.2",
        "webpack-dashboard": "^2.0.0",
        "webpack-dev-server": "^3.1.10"
    },
    "dependencies": {
        "react": "^16.8.1",
        "react-dom": "^16.8.1"
    }
}
